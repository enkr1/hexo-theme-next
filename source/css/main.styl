// CSS Style Guide: http://codeguide.co/#css


$scheme    = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';

$variables = base $scheme;


// Variables Layer
// --------------------------------------------------
for $variable in $variables
  @import "_variables/" + $variable;
for $inject_variable in hexo-config('injects.variable')
  @import $inject_variable;

// Mixins Layer
// --------------------------------------------------
@import "_mixins.styl";
for $inject_mixin in hexo-config('injects.mixin')
  @import $inject_mixin;

// Dark mode colors
// --------------------------------------------------
@import "_colors.styl";

// Common Layer
// --------------------------------------------------

// Scaffolding
@import "_common/scaffolding";

// Layout
@import "_common/outline";

// Components
@import "_common/components";


// Schemes Layer
// --------------------------------------------------
@import "_schemes/" + $scheme;


// Custom Layer
// --------------------------------------------------
for $inject_style in hexo-config('injects.style')
  @import $inject_style;


.fancybox {
  // background: red;
  border: unset;
  width: fit-content;
  height: fit-content;
  display: block;
  margin: auto;

  +mobile() {
    all: unset;
  }

  img {
    display: block;
    // margin: auto; // NOTE: Using this will cause the p below move up

    +desktop() {
      width: 60%
    }

    &.large {
      display: block;
      min-width: 100%;
      width: 100%;
      min-height: 100%;
      height: 100%;
      max-height: unset;
      // margin: auto auto 1.3rem;
    }

    &.no-shadow {
      box-shadow: unset !important;
    }
  }

  .image-caption {
    font-size: $font-size-smaller;
    line-height: 1.4;
  }

  .fancybox-caption {
    transform: translateY(1.1rem);

    .fancybox-caption__body {
      // padding: .3rem;
    }
  }
}

.category-all-page,
.tag-cloud {
  margin: -1.5rem 0 0;
  padding: 0 1rem 3rem;

  .category-all-title,
  .tag-cloud-title {
    font-size: $font-size-small;
    font-style: italic;
    padding: 0 0 1rem;
    text-align: center;
    color: #999;
  }

  .tag-cloud-tags {
    // display: flex;
    // flex-wrap: wrap;

    a {
      margin: auto !important;
      transition: all .3s ease-in-out;
      padding: 1.3rem;
      border: none;

      &::after {
        // display: none !important;
        all: unset !important;
      }

      &:hover {
        // transform: scale(1.2);
        // color: red;
      }
    }
  }
}

.yt-playlist {
  height: 100%;
  min-height: 50rem;
  width: 100%;
}
